extends ./layout
block header
  link( rel="stylesheet" href="//cdn.bootcss.com/datatables/1.10.11/css/dataTables.bootstrap.min.css")

//应用的page title
block pageTitle
  h1 供应商联系人
    small 添加，删除，更新供应商联系人
    .pull-right
      a.btn.btn-box-tool.btn-default(href='/shop/supplier/list')
        i.fa.fa-reply
        span  返回供应商
block main
  .panel
    .panel-heading.with-border
      h3.panel-title 供应商联系人
      .panel-tools
        a.btn.btn-box-tool.btn-default(href="/shop/supplier/contact_add/#{supplier}")
          i.fa.fa-plus
          span  添加供应商联系人
        //button.btn.btn-box-tool(data-widget="collapse")
        //  i.fa.fa-minus
    .panel-body
      table#contactList.table.table-bordered.table-hover.table-striped
        thead
          //th.text-right(width="40") #
          th 姓名
          th 电话
          th 职务
          th 所属供应商
          th 邮箱
          th 备注
          th.text-center(width="160") 操作
        tbody

      form#delForm(method='post', style='display:none', action='/shop/supplier/contact_del')
        input#ids(type='hidden',name='ids')
        input#supplier(type='hidden',name='supplier',value="#{supplier}")
        input#_csrf(type='hidden', name='_csrf', value=_csrf)

//应用添加的脚本在scripts block中定义
block scripts
  script(src='//cdn.bootcss.com/datatables/1.10.11/js/jquery.dataTables.min.js')
  script(src='//cdn.bootcss.com/datatables/1.10.11/js/dataTables.bootstrap.min.js')
  script.
    $(function () {
      var opts = {
        "language": {
          "url": "/themes/default/plugins/datatables/Chinese.json"
        },
        autoWidth: false,
        lengthChange: true,
        searching: true,
        processing: false,
        serverSide: true,
        deferRender: true
      };
      var t = $('#contactList').DataTable($.extend(opts,
              {
                ajax: {url: '/shop/supplier/contact_table/' + "#{supplier}"},
                order: [[0, 'asc']],
                columnDefs: [
                  //{targets: 0, visible: true, sortable: false, searchable: false, defaultContent: ''},
                  {
                    targets: -1, visible: true, sortable: false, className: 'text-center',
                    render: function (data, type, row) {
                      return "<a class='btn btn-xs edit' title='编辑' href='/shop/supplier/contact_edit/#{supplier}/" + row._id + "'><i class='fa fa-edit'></i></a>"
                              + " <button class='btn btn-xs del' title='移除' type='button'><i class='fa fa-trash-o'></i></button>";
                    }
                  }
                ],
                columns: [
                  //{data: ""},
                  {data: "name", defaultContent: ''},
                  {data: "tel", defaultContent: ''},
                  {data: "title", defaultContent: ''},
                  {data: "supplier.name", defaultContent: ''},
                  {data: "email", defaultContent: ''},
                  {data: "note", defaultContent: ''},
                  {data: ""}
                ]
              }
      )).on('draw.dt', function () {
        $('#tableWrapper').fadeIn();
      });
      $('#contactList').on('click', 'button.del', function () {
        var id = t.row($(this).parents('tr')).data()._id;
        $("#delForm #ids").val(id);
        if (id) {
          bootbox.confirm("确定要删除数据吗?", function (result) {
            if (result) {
              $("#delForm").submit();
            }
          });
        }
      });
    });
