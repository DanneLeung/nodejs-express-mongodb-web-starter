extends layout

block header
  link(rel="stylesheet" href="//cdn.bootcss.com/datatables/1.10.11/css/dataTables.bootstrap.min.css")
block main
  .panel
    .panel-heading.with-border
      h3.panel-title 品牌列表
        .panel-tools.pull-right
          a.btn.btn-primary.btn-sm(href="/shop/brand/add")
            i.fa.fa-plus.fa-fw
            | 添加品牌
    .panel-body
      #tableWrapper(style="display:none")
        table#brandList.table.table-hover.table-striped.table-responsive
          thead
            th 名称
            th 品牌logo
            th 描述
            th 激活
            th 管理
          tbody

//应用添加的脚本在scripts block中定义
block scripts
  script(src='//cdn.bootcss.com/datatables/1.10.11/js/jquery.dataTables.min.js')
  script(src='//cdn.bootcss.com/datatables/1.10.11/js/dataTables.bootstrap.min.js')
  script.
    $(document).ready(function () {
      var opts = {
        "language": {
          "url": "/themes/default/plugins/datatables/Chinese.json"
        },
        autoWidth: false,
        lengthChange: true,
        searching: true,
        processing: false,
        //scrollX:true,
        stateSave: true,
        serverSide: true,
        deferRender: true
      };

      var t = $('#brandList').DataTable($.extend(opts, {
        ajax: {url: '/shop/brand/datatable'},
        order: [[0, 'asc']],
        columnDefs: [
          {
            targets: -3, visible: true, sortable: false, className: 'text-center',
            render: function (data, type, row) {
              return "<div class='btn-group' >"
                      + "<a class='btn btn-default btn-sm' title='编辑品牌' href='/shop/brand/edit/" + row._id + "'><i class='fa fa-pencil'></i></a>"
                      + "<a class='btn btn-default btn-sm del' title='删除品牌'><i class='fa fa-trash'></i></a>"
                      + "</div>"
                      ;
            }
          }
        ],
        columns: [
          //{data: ""},
          {
            data: "nameCh", defaultContent: '', render: function (data, type, full, meta) {
            var result = "<a target='_blank' href='" + full.url + "'>" + data + "<br>" + full.nameEn + "</a>";
            return result;
          }
          },
          {
            data: "logo.thumbUrl", defaultContent: '', render: function (data, type, full, meta) {
            return "<a target='_blank' href='" + full.url + "'><img width=50  src='" + data + "'/></a>";
          }
          },

          {data: "description", defaultContent: ''},
          {
            data: "enabled",
            defaultContent: '',
            'class': 'text-center',
            render: function (data, type, full, meta) {
              var result = "";
              if (data == '1') {
                result = "<a class='btn btn-sm key' title='激活/禁用' href='/shop/brand/enable/" + full._id + "'><i class='fa fa-check-square'/></a>"
              } else {
                result = "<a class='btn btn-sm key' title='激活/禁用' href='/shop/brand/enable/" + full._id + "'><i class='fa fa-square-o'/></a>"
              }
              return result;
            }
          },
          {data: ""},
          {data: "nameEn", defaultContent: '', visible: false},
          {data: "url", defaultContent: '', visible: false}
        ]
      })).on('draw.dt', function () {
        $("#tableWrapper").fadeIn();
      });

      //删除品牌的事件
      $('#brandList').on('click', 'a.del', function () {
        var id = t.row($(this).parents('tr')).data()._id;
        if (id) {
          bootbox.confirm("确定要删除数据吗?", function (result) {
            if (result) {
              window.location.href = '/shop/brand/del/' + id;
            }
          });
        }
      });

    })
