extends ../../layouts/default
block header
//应用的page title
block pageTitle
  if viewType == 'add'
    h1 系统设定信息新增
      small 添加系统设定信息
  if viewType == 'edit'
    h1 系统设定信息编辑
      small 编辑系统设定信息

block main
  .panel
    .panel-heading.with-border
      if viewType == 'add'
        h3.panel-title 添加系统设定信息
      if viewType == 'edit'
        h3.panel-title 编辑系统设定信息

      .panel-tools
        a.btn.btn-box-tool.btn-default(href='/system/setting' title="返回")
          i.fa.fa-reply
          span  返回
        | &nbsp;
        if viewType == 'add' || viewType == 'edit'
          button#save.btn.btn-box-tool.btn-default(title="保存")
            i.fa.fa-save
            span  保存
        | &nbsp;
      //button.btn.btn-box-tool(data-widget="collapse")
      //  i.fa.fa-minus
    .panel-body
      div.row
        .col-md-12
          if viewType == 'edit'
            form#settingDelForm(method='post', style='display:none', action='/terminal/del')
              input#ids(type='hidden',name='ids',value="#{setting._id}")
              input#_csrf(type='hidden', name='_csrf', value=_csrf)

          form#settingForm.form-horizontal(name='terminalForm', action='/system/setting/save', method='post')
            if viewType == 'edit'
              input#id(type='hidden', name='id', value="#{setting._id}")
            input#_csrf(type='hidden', name='_csrf', value=_csrf)
            .form-group
              label.control-label.col-md-3 设定组：
              .col-md-4
                input#group.form-control(name='group', value="#{setting ? setting.group : ''}")
              .col-md-5
                p.help-block 分组标签，方便进行参数管理
            .form-group
              label.control-label.col-md-3.required 标识：
              .col-md-4
                input#key.form-control.required(name='key', value="#{setting ? setting.key : ''}")
              .col-md-5
                p.help-block 唯一识别标识，请谨慎修改，不正确参数可能导致系统部分功能不能正确运行
            .form-group
              label.control-label.col-md-3.required 设定值：
              .col-md-4
                input#value.form-control.required(name='value', value="#{setting ? setting.value : ''}")
              .col-md-5
                p.help-block 参数对应的参数值
            .form-group
              label.control-label.col-md-3 描述：
              .col-md-4
                input#describe.form-control(name='description', value="#{setting ? setting.description : ''}")

//应用添加的脚本在scripts block中定义
block scripts
  script(src='/themes/default/plugins/input-mask/jquery.inputmask.js')
  script(src='/themes/default/plugins/input-mask/jquery.inputmask.date.extensions.js')
  script.
    $(document).ready(function () {

      var form = $('#settingForm');
      $("#save").on('click', function () {
        form.submit();
      });

      form.validate({
        ignore: '.ignore',
        rules: {
          key: {
            required: true,
            remote: '/system/setting/checkName?oldKey=#{setting ? setting.key : ''}'
          },
          value: {
            required: true
          }
        },
        messages: {
          key: {
            remote: '该用户已经存在!'
          }
        }
      });

      $('#del').on('click', function () {
        bootbox.confirm("确定要删除数据吗?", function (result) {
          if (result) {
            $("#terminalDelForm").submit();
          }
        });
      });


    });

