extends ../../layouts/default
block header
  link( rel="stylesheet" href="//cdn.bootcss.com/datatables/1.10.11/css/dataTables.bootstrap.min.css")
//应用的page title
block pageTitle
  h1 系统设定
    small 查看系统中的设定信息
block main
  .panel
    .panel-heading.with-border
      h3.panel-title 系统设定
      .panel-tools
        a.btn.btn-sm.btn-default(href="/system/setting/add" title="添加系统设定")
          i.fa.fa-plus
    .panel-body
      #tableWrapper(style="display:none")
        table#settingList.table.table-bordered.table-hover.table-striped
          thead
            th 设定组
            th 名称
            th 设定值
            th 描述
            th.text-center(width="80") 操作
          tbody
        form#settingDelForm(method='post', style='display:none', action='/system/setting/del')
          input#ids(type='hidden',name='ids')
          input#_csrf(type='hidden', name='_csrf', value=_csrf)

//应用添加的脚本在scripts block中定义
block scripts
  script(src='//cdn.bootcss.com/datatables/1.10.11/js/jquery.dataTables.min.js')
  script(src='//cdn.bootcss.com/datatables/1.10.11/js/dataTables.bootstrap.min.js')
  script.
    $(document).ready(function () {
      var opts = {
        "language": {
          "url": "/themes/default/plugins/datatables/Chinese.json"
        },
        autoWidth: false,
        lengthChange: true,
        searching: true,
        processing: false,
        serverSide: true,
        deferRender: true
      };
      // 订单表格
      var t = $('#settingList').DataTable($.extend(opts, {
        ajax: {url: '/system/setting/dataTable'},
        order: [[1, 'asc']],
        columns: [
          {data: "group", defaultContent: ''},
          {data: "key", defaultContent: ''},
          {data: "value", defaultContent: ''},
          {data: "description", defaultContent: ''},
          {
            data: "_id", sortable: false, className: 'text-center', render: function (data, type, row) {
            return "<a class='btn btn-default btn-xs edit' title='编辑' href='/system/setting/edit/" + data + "' ><i class='fa fa-edit'></i></a>"
                    + " <button class='btn btn-default btn-xs del' type='button'><i class='fa fa-trash-o'></i></button>";
          }
          }
        ]
      })).on('draw.dt', function () {
        $('#tableWrapper').fadeIn();
      });

      $('#settingList').on('click', 'button.del', function () {
        var id = t.row($(this).parents('tr')).data()._id;
        $("#settingDelForm #ids").val(id);
        if (id) {
          bootbox.confirm("确定要删除数据吗?", function (result) {
            if (result) {
              $("#settingDelForm").submit();
            }
          });
        }
      });
    });