extends ../../layouts/default
block header
//应用的page title
block pageTitle
  if viewType == 'add'
    h1 任务信息新增
      small 添加任务信息
  if viewType == 'edit'
    h1 任务信息编辑
      small 编辑任务信息
  if viewType == 'view'
    h1 任务信息查看
      small 查看任务信息

block main
  .panel
    .panel-heading.with-border
      if viewType == 'add'
        h3.panel-title 添加任务信息
      if viewType == 'edit'
        h3.panel-title 编辑任务信息
      if viewType == 'view'
        h3.panel-title 查看任务信息

      .panel-tools
        a.btn.btn-box-tool.btn-default(href='/system/job/list')
          i.fa.fa-reply
          span  返回
        | &nbsp;
        if viewType == 'add' || viewType == 'edit'
          button#save.btn.btn-box-tool.btn-default
            i.fa.fa-save
            span  保存

      //&nbsp;
      //button.btn.btn-box-tool(data-widget="collapse")
      //  i.fa.fa-minus
    .panel-body
      div#jobEdit.row
        .col-md-12
          if viewType == 'edit'
            form#jobDelForm(method='post', style='display:none', action='/system/job/del')
              input#ids(type='hidden',name='ids',value="#{job._id}")
              input#_csrf(type='hidden', name='_csrf', value=_csrf)

          form#jobForm.form-horizontal(name='jobForm', action='/system/job/save?_#{Date.now()}', method='post')
            input#id(type='hidden', name='id', value="#{job._id}")
            input#_csrf(type='hidden', name='_csrf', value=_csrf)
            .form-group
              label.control-label.col-md-3.required 名称：
              .controls.col-md-8
                input#name.form-control.required(name='name', value="#{job.name}")
            .form-group
              label.control-label.col-md-3.required job脚本：
              .controls.col-md-8
                input#jobClass.form-control.required(name='jobClass', value="#{job.jobClass}")
            .form-group
              label.control-label.col-md-3.required 表达式：
              .controls.col-md-8
                input#cron.form-control.required(name='cron',type="text",value='#{job.cron}')
            .form-group
              label.control-label.col-md-3 描述：
              .controls.col-md-8
                textarea#description.form-control(name='description' rows='3')
                  | #{job.description}

//应用添加的脚本在scripts block中定义
block scripts
  script.
    $(document).ready(function () {

      var form = $('#jobForm');
      $("#save").on('click', function () {
        form.submit();
      });

      form.validate({
        ignore: '.ignore',
        rules: {
          name: {
            required: true,
            remote: '/system/job/checkname?oldName=#{job.name}'
          },
          jobClass: {
            required: true
          }, cron: {
            required: true
          }
        },
        messages: {
          name: {
            remote: '该用户已经存在!'
          }
        }
      });

      $('#del').on('click', function () {
        bootbox.confirm("确定要删除数据吗?", function (result) {
          if (result) {
            $("#jobDelForm").submit();
          }
        });
      });


    });

