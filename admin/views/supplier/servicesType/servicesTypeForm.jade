extends ../../layouts/default
block header
  link( rel="stylesheet" href="//cdn.bootcss.com/datatables/1.10.11/css/dataTables.bootstrap.min.css")
//应用的page title
block pageTitle
  if viewType == 'add'
    h1 供应商类别新增
      small 添加供应商类别信息
  if viewType == 'edit'
    h1 供应商类别编辑
      small 编辑供应商类别信息
  if viewType == 'view'
    h1 供应商类别查看
      small 查看供应商类别信息

block main
  .panel
    .panel-heading.with-border
      if viewType == 'add'
        h3.panel-title 添加供应商类别信息
      if viewType == 'edit'
        h3.panel-title 编辑供应商类别信息
      if viewType == 'view'
        h3.panel-title 查看供应商类别信息

      .panel-tools
        a.btn.btn-sm.btn-default(href='/supplier/servicesType' title="返回")
          i.fa.fa-reply
        | &nbsp;
        if viewType == 'add' || viewType == 'edit'
          button#save.btn.btn-sm.btn-default(title="保存")
            i.fa.fa-save
        | &nbsp;
        if viewType == 'view' || viewType == 'edit'
          button#del.btn.btn-sm.btn-default.del(title="删除")
            i.fa.fa-trash
      //&nbsp;
      //button.btn.btn-box-tool(data-widget="collapse")
      //  i.fa.fa-minus
    .panel-body
      div#roleEdit.row
        .col-md-12
          if viewType == 'edit'
            form#typeDelForm(method='post', style='display:none', action='/supplier/servicesType/del')
              input#ids(type='hidden',name='ids',value="#{type._id}")
              input#_csrf(type='hidden', name='_csrf', value=_csrf)

          form#typeForm.form-horizontal(name='typeForm', action='/supplier/servicesType/save', method='post')
            if viewType == 'edit'
              input#id(type='hidden', name='id', value="#{type._id}")

            input#_csrf(type='hidden', name='_csrf', value=_csrf)
            .form-group
              label.control-label.col-md-3.required 类别名称：
              .controls.col-md-9
                input#name.form-control.required(name='name',placeholder='请输入名称', value="#{type != null ? type.name : ''}")
            .form-group
              label.control-label.col-md-3.required 类别介绍：
              .controls.col-md-9
                textarea#instruction.form-control(name='instruction',placeholder='请输入类别介绍', rows="3")
                  | #{type != null ? type.instruction : ''}
            .form-group
              label.control-label.col-md-3 备注：
              .controls.col-md-9
                textarea#note.form-control(name='note',placeholder='请输入类别备注',rows="3")
                  | #{type != null ? type.note : ''}

//应用添加的脚本在scripts block中定义
block scripts
  script.
    $(document).ready(function () {
      var form = $('#typeForm');
      $("#save").on('click', function () {
        form.submit();
      });
      form.validate({
        rules: {
          name: {
            required: true,
            remote: '/supplier/servicesType/checkname?oldName=#{type ? type.name : ''}'
          },instruction:{
            required: true
          }
        },
        messages: {
          name: {
            remote: '该角色已存在!'
          }
        }
      });

      $('#del').on('click', function () {
        bootbox.confirm("确定要删除数据吗?", function (result) {
          if (result) {
            $("#typeDelForm").submit();
          }
        });
      });

    });
