extends ../layout

block header
  link(rel="stylesheet" href="//cdn.bootcss.com/datatables/1.10.11/css/dataTables.bootstrap.min.css")
block main
  .panel
    .panel-heading.with-border
      h3.panel-title 幸运九宫格活动
        .panel-tools.pull-right
          a.btn.btn-primary.btn-sm(href="#{baseUrl}/add")
            i.fa.fa-plus.fa-fw
            | 创建幸运九宫格活动
    .panel-body
      #tableWrapper(style="display:none")
        table#lucky9List.table.table-hover.table-striped.table-responsive
          thead
            //th 类型
            th 名称
            th.text-center 时间
            th.text-center URL
            th.text-center 上线
            th.text-center 激活
            th.text-center 开始时间
            th.text-center 操作
          tbody

//应用添加的脚本在scripts block中定义
block scripts
  script(src='//cdn.bootcss.com/datatables/1.10.11/js/jquery.dataTables.min.js')
  script(src='//cdn.bootcss.com/datatables/1.10.11/js/dataTables.bootstrap.min.js')
  script(src='#{theme}/js/jquery.qrcode.min.js')
  script.
    $(document).ready(function () {
      var opts = {
        "language": {
          "url": "/themes/default/plugins/datatables/Chinese.json"
        },
        autoWidth: false,
        lengthChange: true,
        searching: true,
        processing: false,
        //scrollX:true,
        stateSave: true,
        serverSide: true,
        deferRender: true
      };

      var t = $('#lucky9List').DataTable($.extend(opts, {
        ajax: {url: '#{req.baseUrl}/datatable'},
        order: [[1, 'asc']],
        columnDefs: [
          {
            targets: -1, visible: true, sortable: false, className: 'text-center',
            render: function (data, type, row) {
              var activityId = row.activity ? row.activity._id:"";
              var url = contextFront + '/lucky9/' + row._id + '?cid=#{req.session.channel.identity}&wid=#{req.session.wechat._id}';
              var html = "";
              html += "<div class='btn-group'> ";
              html += '<button class="btn btn-default btn-sm dropdown-toggle" type="button" data-toggle="dropdown"><i class="fa fa-qrcode"></i><span class="caret"></span></button>' +
                      '<div class="qrcode dropdown-menu dropdown-menu-right" style="width:210px;height: 210px;padding:4px;border:1px solid #f4f4f4" data-url="' + url + '"></div>';
              if(!row.online){
                html += "<a class='btn btn-default btn-sm' title='编辑幸运九宫格活动' href='#{baseUrl}/edit/" + row._id + "'><i class='fa fa-pencil'></i></a>" +
                        "<a class='btn btn-default btn-sm del' title='删除幸运九宫格活动'><i class='fa fa-trash'></i></a>" ;
              }
              if(activityId){
                html += "<a class='btn btn-default btn-sm' title='活动统计' href='/activities/stats/" + activityId + "'><i class='fa fa-line-chart'></i></a>";
              }
              html+="</div>";
              return html;
            }
          }
        ],
        columns: [
          {data: "name", defaultContent: ''},
          {
            data: "activity.startTime",
            defaultContent: '',
            class: 'text-center',
            render: function (data, type, full, meta) {
              if(!full.activity){
                return "";
              }
              var b = moment(new Date(data));
              var a = moment(new Date(full.activity.endTime));
              var date = "";
              if (data != null) {
                date = b.format("YYYY-MM-DD HH:mm");
                date += " - " + a.format("YYYY-MM-DD HH:mm");
              }
              return date;
            }
          },
          {
            data: "url", class: "text-center", render: function (data, type, full, meta) {
            var url = contextFront + '/lucky9/' + full._id + '?cid=#{req.session.channel.identity}&wid=#{req.session.wechat._id}';
            return '<a href="' + url + '">' + url + '</a>';
          }
          },
          {
            data: "online",
            defaultContent: '',
            'class': 'text-center',
            render: function (data, type, full, meta) {
              var result = "";
              if (data) {
                result = "<a class='btn btn-sm key' title='上线/下线' href='#{baseUrl}/online/" + full._id + "'><i class='fa fa-check-square'/></a>"
              } else {
                result = "<a class='btn btn-sm key' title='上线/下线' href='#{baseUrl}/online/" + full._id + "'><i class='fa fa-square-o'/></a>"
              }
              return result;
            }
          },
          {data: "activity.endTime", defaultContent: '', visible: false},
          {data: "activity", defaultContent: '', visible: false},
          {data: ""}
        ]
      })).on('draw.dt', function () {
        $("#tableWrapper").fadeIn();
        $(".qrcode").each(function () {
          $(this).qrcode({'width': 200, 'height': 200, 'text': $(this).data('url')});
        });
      });

      //删除幸运九宫格活动的事件
      $('#lucky9List').on('click', 'a.del', function () {
        var id = t.row($(this).parents('tr')).data()._id;
        if (id) {
          bootbox.confirm("确定要删除数据吗?", function (result) {
            if (result) {
              window.location.href = '#{baseUrl}/del/' + id;
            }
          });
        }
      });

    })
