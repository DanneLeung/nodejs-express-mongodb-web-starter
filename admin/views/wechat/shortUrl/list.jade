extends ../layout

block header
  link(rel="stylesheet" href="//cdn.bootcss.com/datatables/1.10.11/css/dataTables.bootstrap.min.css")
block main
  .panel
    .panel-heading.with-border
      h3.panel-title 长链接转短链接
        .panel-tools.pull-right
          a.btn.btn-primary.btn-sm(href="/wechat/shortUrl/add")
            i.fa.fa-plus.fa-fw
            | 添加短链接
    .panel-body
      #tableWrapper(style="display:none")
        table#whiteList.table.table-hover.table-striped.table-responsive
          thead
            //th 类型
            th 长链接
            th 短链接
            th 失效时间
            th 操作
            th 操作
          tbody

//应用添加的脚本在scripts block中定义
block scripts
  script(src='//cdn.bootcss.com/datatables/1.10.11/js/jquery.dataTables.min.js')
  script(src='//cdn.bootcss.com/datatables/1.10.11/js/dataTables.bootstrap.min.js')
  script.
    $(document).ready(function () {
      var opts = {
        "language": {
          "url": "/themes/default/plugins/datatables/Chinese.json"
        },
        autoWidth: false,
        lengthChange: true,
        searching: true,
        processing: false,
        //scrollX:true,
        stateSave: true,
        serverSide: true,
        deferRender: true
      };

      var t = $('#whiteList').DataTable($.extend(opts, {
        ajax: {url: '/wechat/shortUrl/datatable'},
        order: [[1, 'asc']],
        columnDefs: [
          {
            targets: -2, visible: true, sortable: true, className: 'text-center',
            render: function (data, type, row) {
              return "<div class='btn-group'> <a class='btn btn-default btn-sm' title='编辑短链接' href='/wechat/shortUrl/edit/" + row._id + "'><i class='fa fa-pencil'></i></a>"
                      + "<a class='btn btn-default btn-sm del' title='删除短链接'><i class='fa fa-trash'></i></a></div>";
            }
          }
        ],
        columns: [
          {data: "longUrl", defaultContent: ''},
          {data: "shortUrl", defaultContent: '', render: function (data, type, full, meta) {
            return full.host +"/"+ data;
          }},
          {
            data: "expireTime", defaultContent: '', render: function (data, type, full, meta) {
              if(data){
                return moment(data).format('YYYY-MM-DD');
              }else{
                return "";
              }
            }
          },
          {data: ""},
          {data: "host", visible: false},
        ]
      })).on('draw.dt', function () {
        $("#tableWrapper").fadeIn();
      });

      //删除白名单的事件
      $('#whiteList').on('click', 'a.del', function () {
        var id = t.row($(this).parents('tr')).data()._id;
        if (id) {
          bootbox.confirm("确定要删除数据吗?", function (result) {
            if (result) {
              window.location.href = '/wechat/shortUrl/del/' + id;
            }
          });
        }
      });
    })
