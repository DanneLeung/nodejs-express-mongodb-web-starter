-var baseUrl = (req.baseUrl)
-if (baseUrl.indexOf('http')<0)
-baseUrl = baseUrl.replace('//','/');
doctype html
html
  block head
    head
      include incs/header
      block header

  // ADD THE CLASS layout-top-nav TO REMOVE THE SIDEBAR.
  body.hold-transition.layout-top-nav.skin-blue
    .wrapper
      include incs/nav-top-wechat
      .content-wrapper(style="margin-bottom:48px;")
        section.content-header
          block pageTitle

        // Main content
        section.content
          //- include incs/flash
          .row
            .col-xs-12.col-sm-3.col-lg-2
              .big-menu.margin-bottom
                //- |#{currentMenu.title}
                - var m = findMenu(req.session.menus, currentMenu.lineage, 3)
                if(m && m.children && m.children.length)
                  each c in m.children
                    if(c.children && c.children.length > 0)
                      //有子菜单
                      .panel.panel-default
                        .panel-heading(data-widget='collapse')
                          h4.panel-title(data-id="#{c._id}")=c.title
                          .panel-tools.pull-right
                            span.btn.btn-box-tool
                              i.fa.fa-caret-down
                        .panel-body.no-padding.list-group
                          each cc in c.children
                            a.list-group-item(class='#{isActive(cc.link)}', href = '#{cc.link}',data-id="#{cc._id}")
                              if(cc.iconClass)
                                i(class="#{cc.iconClass} fa-fw")
                              else
                                i.fa.fa-list.fa-fw
                              | #{cc.title}
                    else
                      //没有子菜单
                      a.list-group-item(class="#{isActive(c.link)}",href="#{c.link}",data-id="#{c._id}")
                        if(c.iconClass)
                          i(class="#{c.iconClass} fa-fw")
                        else
                          i.fa.fa-list.fa-fw
                        | #{c.title}
            .col-xs-12.col-sm-9.col-lg-10
              block right
      include incs/footer
    block bottom
      // jQuery 2.1.4
      script(src='//cdn.bootcss.com/jquery/2.2.1/jquery.min.js')
      // Bootstrap 3.3.5
      script(src='//cdn.bootcss.com/bootstrap/3.3.6/js/bootstrap.min.js')
      // SlimScroll
      script(src='//cdn.bootcss.com/jQuery-slimScroll/1.3.7/jquery.slimscroll.min.js')
      // FastClick
      script(src='//cdn.bootcss.com/fastclick/1.0.6/fastclick.min.js')
      // icheck
      script(src='//cdn.bootcss.com/iCheck/1.0.2/icheck.min.js')
      //PACE
      //script(src='//cdn.bootcss.com/pace/1.0.2/pace.min.js')
        //表单验证
      script(src='//cdn.bootcss.com/jquery-validate/1.15.0/jquery.validate.min.js')
      script(src='/themes/default/plugins/jquery-validation/dist/jquery.validate.messages_zh.js')
      script(src='/themes/default/plugins/setup_validation.js')
      // bootbox
      script(src='//cdn.bootcss.com/bootbox.js/4.4.0/bootbox.min.js')
      script(src='//cdn.bootcss.com/toastr.js/2.1.2/toastr.min.js')

      script(src='//cdn.bootcss.com/moment.js/2.11.2/moment.min.js')
      script(src='//cdn.bootcss.com/moment.js/2.11.2/locale/zh-cn.js')
      // AdminLTE App
      script(src='/themes/default/dist/js/app.js')
      if (info && info.length)
        script.
          toastr.info('#{info.join('<br/>')}');
      if (errors && errors.length)
        script.
          toastr.error('#{errors.join('<br/>')}');
      if (success && success.length)
        script.
          toastr.success('#{success.join('<br/>')}');
      // App scripts go here
      block scripts
