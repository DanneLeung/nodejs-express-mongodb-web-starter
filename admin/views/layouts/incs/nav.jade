// Main Header
header.main-header.clearfix
  // Logo
  a.logo(href='/')
    // mini logo for sidebar mini 50x50 pixels
    span.logo-mini
      b #{appName}运营管理平台
    // logo for regular state and mobile devices
    span.logo-lg
      b #{appName}运营管理平台
  // Header Navbar
  nav.navbar.navbar-static-top(role='navigation')
    // Sidebar toggle button
    a.sidebar-toggle(href='#', data-toggle='offcanvas', role='button')
      span.sr-only Toggle navigation
    // Navbar Right Menu
    .navbar-custom-menu
      ul.nav.navbar-nav
        // Messages: style can be found in dropdown.less
        li.dropdown.messages-menu
          // Menu toggle button
          a.dropdown-toggle(href='#', data-toggle='dropdown')
            i.fa.fa-envelope-o
            span.label.label-success 4
          ul.dropdown-menu
            li.header You have 4 messages
            li
              // inner menu: contains the messages
              ul.menu
                li
                  // start message
                  a(href='#')
                    .pull-left
                      // User Image
                      img.img-circle(src='/themes/default/dist/img/user2-160x160.jpg', alt='User Image')
                    // Message title and timestamp
                    h4
                      Support Team
                      small
                        i.fa.fa-clock-o 5 mins
                    // The message
                    p Why not buy a new awesome theme?
                // end message
              // /.menu
            li.footer
              a(href='#') See All Messages
        // User Account Menu
        if (req.isAuthenticated())
          li.dropdown.user.user-menu
            // Menu Toggle Button
            a.dropdown-toggle(href='#', data-toggle='dropdown')
              // The user image in the navbar
              - if(req.user)
              img.user-image(src="#{req.user.photo_profile ? req.user.photo_profile : '/themes/default/dist/img/avatar.png'}", alt="头像")
              // hidden-xs hides the username on small devices so only the image appears.
              span.hidden-xs &nbsp;#{req.user.username}
              b.caret
            ul.dropdown-menu
              li
                a(href='/profile/#{req.user.username}')
                  i.fa
                  | 个人资料
              li
                a(href='/logout?_#{Date.now()}')
                  i.fa.fa-sign-out
                  | 退出
        //li
          a(href='#', data-toggle='control-sidebar')
            i.fa.fa-gears