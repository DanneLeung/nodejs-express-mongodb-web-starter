extends default
block header
  style.
    .item {
      background-color: #fff;
    }
    .subtitle{
      margin-bottom: 0.5rem;
    }
    .nickname {margin-right: 0.5rem}
    .list{background-color:#fff;}
    
    .topic, .item {cursor:pointer;}
    .imgs a {width: 100%;}
    .imgs .img {height:5rem; max-height:5rem; width: auto; background-size: cover; background-repeat: no-repeat;background-position: center;padding:0.4rem;}
    .comments .item>.content>.imgs {
      margin-top: 0
    }
    .comments .item>.content>.imgs img {
      margin: 0
    }
    .comments>.list {
      box-shadow: inset .1rem 0 0 rgba(0, 0, 0, .1)
    }
    #fabNav {
      display: none!important
    }
  block css
block main
  block headNav
    
  //- #pageLoading.loading.loading-light
  #partial.container.no-padding
    block content

block scripts
  script.
    var fromUrl = contextFront;
    if(is_weixin()){
      W.oauthUser(appid, function (user) {
        if(user){
          $.get(contextFront + "/session",{openid: user.openid}, function(data){
            if(data){
              //- window.location.href = fromUrl;
              $("#headimgurl").attr("src", contextRoot + data.headimgurl);
            } else{
              $.messager.show('无法识别当前粉丝信息!', { type: 'error', placement: 'bottom-center' });   
            }
          });
        }else{
          $.messager.show('微信公众号页面授权错误，无法获得粉丝信息!', { type: 'error', placement: 'bottom-center' });   
        }
      });
    }else{
      $.get(contextFront + "/session",{openid: "oxVEQuN3xDA1r8aBD_hh-xMQeir4"}, function(data){
        if(data){
          $("#headimgurl").attr("src", contextRoot + data.headimgurl);
          //- window.location.href = fromUrl;
        } else{
          $.messager.show('无法识别当前粉丝信息!', { type: 'error', placement: 'bottom-center' });   
        }
      });
    }

    $(document).ready(function(){
      if(is_weixin()){
        W.config(appid);
      }

    });
  block contentScripts

