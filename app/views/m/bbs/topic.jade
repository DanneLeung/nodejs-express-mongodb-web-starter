
extends ../layouts/bbs
block header
  style.
    .img {width: 100%;}
block headNav

block content
  .space-sm
    if(!topic)
      .article
        p 帖子不存在哦，可能已经被删除 ~~~ 
    .list#topic
      .item.with-avatar.no-padding
        a(href="fans/#{topic.fans?topic.fans._id}")
          .avatar.circle
            img(src='#{topic.fans?topic.fans.headimgurl:""}', alt='')

        .content
          div
            a.text-link.strong(href="fans/#{topic.fans?topic.fans._id}") 
              | #{topic.fans?topic.fans.nickname:(topic.user?topic.user.username:"")}
            .pull-right.muted
              div
                a.btn
                  i.icon-eye-open
                  |  #{topic.readCount?topic.readCount:0}
                a.btn(href="#")
                  i.icon-thumbs-o-up
                  small.muted  #{topic.likeCount?topic.likeCount:0}
                a.btn(href="#")
                  i.icon-heart
                  small.muted  #{topic.commentCount?topic.commentCount:0}
          .subtitle
            span
              if topic.title 
                | #{topic.title} - 
              | #{formatDatetime(topic.createdAt)}
    .space-sm=topic.content
    if(topic.images && topic.images.length>0)
      each img in topic.images
        if img
          img.img(src='#{contextRoot}#{img}', alt='')
  include comments
  block contentScripts
    script.
      $(function(){
        $("body").removeClass("with-heading-top");
      });
