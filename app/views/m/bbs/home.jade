extends ../layouts/bbs
block header
  style.
    .item {
      background-color: #fff;
    }
    .subtitle{
      margin-bottom: 0.5rem;
    }
block content
  //- .heading
    .title 
  div
    .list#topics
  nav.fab.affix.dock-bottom.dock-right.shadow-none
    a.btn.circle.shadow-2.has-margin-sm.btn-lg.green(title='发布新帖',href="topic/new/#{node}")
      i.icon.icon-plus
block contentScripts
  script.
    $(document).ready(function(){
      $(".list").on("click",".item", function(){
        var id = $(this).data("id");
        if(id){
          window.location.href=contextFront+"/topic/view/"+id;
        }
      });
      $.get('topics/#{node}', function(data){
        $('#topics').append(data);
      });
    });

