extends layout
block header
  title 提交注册认证信息

block main
  .hd
    .text-center(style="text-align:center")
      img#headimgurl(src="",style='width:60px;height:60px;border-radius:50%;')
      h4#nickname 未知用户
  .bd
    form#registerForm(action='#{baseUrl}/save', method='post')
      input(type='hidden', name='_csrf', value=_csrf)
      input#openid(type='hidden', name='openid')
      .weui_cells.weui_cells_form
        .weui_cells_title
          | 注册信息
        .weui_cell
          .weui_cell_hd
            label.weui_label(for="fullname") 姓名:
              span.required *
          .weui_cell_bd.weui_cell_primary
            input#fullname.weui_input(type='text',name="fullname" placeholder='请输入您的真实姓名')
        //.weui_cell
          .weui_cell_hd
            label.weui_label(for="username") 用户名:
              span.required *
          .weui_cell_bd.weui_cell_primary
            input#username.weui_input(type='text',name="username" placeholder='请输入用户名')
        .weui_cell
          .weui_cell_hd
            label.weui_label(for="numberID") 身份证:
              span.required *
          .weui_cell_bd.weui_cell_primary
            input#numberID.weui_input(type='tel',name="numberID" placeholder='请输入您的身份证号码')
        .weui_cell
          .weui_cell_hd
            label.weui_label(for="mobile") 手机:
              span.required *
          .weui_cell_bd.weui_cell_primary
            input#mobile.weui_input(type='tel',name="mobile", placeholder='请输入您的手机号码')
          .weui_cell_ft
            button#retryBtn.weui_btn.weui_btn_primary.weui_btn_mini(type="button") 获取短信验证码
        .weui_cell
          .weui_cell_hd
            label.weui_label(for="email") 邮件:
          .weui_cell_bd.weui_cell_primary
            input.weui_input(type='email',name="email", placeholder='请输入您的邮件地址')
        .weui_cell.weui_vcode
          .weui_cell_hd
            label.weui_label 验证码:
              span.required *
          .weui_cell_bd.weui_cell_primary
            input.weui_input(type='checkCode', placeholder='请输入验证码')
          .weui_cell_ft
            //i.weui_icon_warn
            img(src='#{baseUrl}/captcha',onclick="this.src='#{baseUrl}/captcha?_'+new Date()")
        // /.col
      .weui_btn_area
        button.register.weui_btn.weui_btn_primary(type="submint") 提交注册认证信息
// /.form-box
// /.register-box
block script
  script(src="#{baseUrl}/register.js")
